<% dopajo_obj = Customer.dopajo.first %>
<br/>
<br/>
<table class="tg">
  <tbody>
  <tr>
    <td class="tg-h25s" colspan="12" style="font-size: 35px">FAKTURA</td>
  </tr>
  <tr>
    <td class="tg-zv4m" colspan="4" style="font-size: 18px;">DATUM SPLATNOSTI</td>
    <td class="tg-8jgo" colspan="4" style="font-size: 18px;">ČÍSLO ÚČTU</td>
    <td class="tg-ofj5" colspan="4" style="font-size: 18px;">VS / ČÍSLO DOKLADU</td>
  </tr>
  <tr>
    <td class="tg-zv4m" colspan="4" style="font-weight: bold; font-size: 24px"><%= format_date @invoice.due_date %></td>
    <td class="tg-8jgo" colspan="4" style="font-weight: bold; font-size: 24px">1234567890988/0001</td>
    <td class="tg-ofj5" colspan="4" style="font-weight: bold; font-size: 24px"><%= @invoice.reference_number %></td>
  </tr>
  <tr>
    <td class="tg-zv4m" colspan="12"></td>
  </tr>
  <tr>
    <td class="tg-zv4m" colspan="4" style="background-color: lightgray; border-color: lightgray;">
      <p class="velikost_18">DODAVATEL</p>
      <%= dopajo_obj.name %><br/>
      <%= "#{dopajo_obj.street} #{dopajo_obj.number}" %><br/>
      <%= "#{dopajo_obj.psc} #{dopajo_obj.city}" %><br/>
      IČ: <%= dopajo_obj.ic %><br/>
      DIČ: <%= dopajo_obj.dic %><br/>
    </td>
    <td class="tg-zv4m" colspan="4" style="background-color: lightgray; border-color: lightgray;">
      <p class="velikost_18">ODBĚRATEL</p>
      <%= @invoice.customer.name %><br/>
      <%= "#{@invoice.customer.street} #{@invoice.customer.number}" %><br/>
      <%= "#{@invoice.customer.psc} #{@invoice.customer.city}" %><br/>
      IČ: <%= @invoice.customer.ic %><br/>
      DIČ: <%= @invoice.customer.dic %><br/>
    </td>
    <td class="tg-ofj5" colspan="4" style="background-color: lightgray; border-color: lightgray;">
      <p class="velikost_18">DATUM VYSTAVENÍ</p>
      <%= format_date @invoice.date_of_issue %><br/><br/>
      <p class="velikost_18">DATUM ZDANITELNÉHO PLNĚNÍ</p>
      <%= format_date @invoice.date_of_taxable_supply %><br/>
    </td>
  </tr>
  <tr>
    <td class="tg-73oq" colspan="12" style="border-left-color: white; border-right-color: white;"></td>
  </tr>
  <tr>
    <td class="tg-73oq" colspan="4" style="font-size: 15px">POLOŽKA</td>
    <td class="tg-3z1b" colspan="2" style="font-size: 15px">CENA</td>
    <td class="tg-3z1b" colspan="2" style="font-size: 15px">% DPH</td>
    <td class="tg-3z1b" colspan="2" style="font-size: 15px">DPH</td>
    <td class="tg-3z1b" colspan="2" style="font-size: 15px">CELKEM S DPH</td>
  </tr>
  <% @invoice.invoice_lines.each do |line| %>
    <tr>
      <td class="tg-73oq" colspan="4"><%= line.label %></td>
      <td class="tg-3z1b" colspan="2"><%= format_currency line.price, @invoice.currency %></td>
      <td class="tg-3z1b" colspan="2"><%= format_currency line.vat_percent, '%' %></td>
      <td class="tg-3z1b" colspan="2"><%= format_currency line.vat, @invoice.currency %></td>
      <td class="tg-3z1b" colspan="2"><%= format_currency line.price_with_vat, @invoice.currency %></td>
    </tr>
  <% end %>
  <% 5.times do %>
    <tr>
      <td class="tg-zv4m" colspan="12"></td>
    </tr>
  <% end %>

  <tr>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
  </tr>
  <tr>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m" colspan="3">SOUČET POLOŽEK</td>
    <td class="tg-ofj5" colspan="3"><%= format_currency @invoice.tax_base, @invoice.currency %></td>
  </tr>
  <tr>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m" colspan="3">DPH</td>
    <td class="tg-ofj5" colspan="3"><%= format_currency @invoice.vat, @invoice.currency %></td>
  </tr>
  <tr>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m"></td>
    <td class="tg-zv4m" colspan="3" style="font-weight: bold; font-size: 25px">CELKEM S DPH</td>
    <td class="tg-ofj5" colspan="3" style="font-weight: bold; font-size: 25px"><%= format_currency @invoice.to_be_paid, @invoice.currency %></td>
  </tr>
  </tbody>
</table>
