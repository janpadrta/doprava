<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Reference number</th>
      <th>Order</th>
      <th>Payment type</th>
      <th>Date of issue</th>
      <th>Due date</th>
      <th>Date of taxable supply</th>
      <th>Tax base</th>
      <th>Vat</th>
      <th>To be paid</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.reference_number %></td>
        <td><%= invoice.order_id %></td>
        <td><%= invoice.payment_type %></td>
        <td><%= invoice.date_of_issue %></td>
        <td><%= invoice.due_date %></td>
        <td><%= invoice.date_of_taxable_supply %></td>
        <td><%= invoice.tax_base %></td>
        <td><%= invoice.vat %></td>
        <td><%= invoice.to_be_paid %></td>
        <td><%= invoice.user_id %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

